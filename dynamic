#include<stdio.h>
#include<math.h>

int main()
{
    int t,h,w;
    double k;
    printf("Enter the value of t: ");
    scanf("%d",&t);
    printf("Enter the value of h: ");
    scanf("%d",&h);
    printf("Enter the value of w: ");
    scanf("%d",&w);
    k=0.5*pow(t,2)-0.2*h+0.1*w-15;
    printf("%f \n",k);
    
    if (k>300)
        printf("sunny");
    else if (200<k &&k<=300)
        printf("cloudy");
    else if (100<k && k<=200)
        printf("rainy");
    else if (k<=100)
        printf("stormy");
    return 0;
}
